@page "/role"
@using UI.Components.Layout
@using UI.Service
@inject StateLogin login
@using AntDesign;
@using AntDesign.TableModels;
@using System.Text.Json;
@using System.ComponentModel;
@using UI.Components.Pages.Modals
@using Models;

@inject ModalService ModalService;

@layout AdminLayout;

<br />
<br />
<h3>Role</h3>


<Button Type="primary" OnClick="@OnAddRole">
    Add Role
</Button>

<br />

<Table @ref="table"
       TItem="Models.Role"
       DataSource="@RoleList"
       Total="_total"
       @bind-PageIndex="_pageIndex"
       @bind-PageSize="_pageSize"
       @bind-SelectedRows="selectedRows"
       OnChange="OnChange"
       Size="TableSize.Small"
       RowKey="x=>x.ID">

    <PropertyColumn Title="Id" Property="c=>c.ID" Sortable />
    <PropertyColumn Title="Title" Property="c=>c.Name" />
    <PropertyColumn Title="Discription" Property="c=>c.Description" Sortable />
   
</Table>

<br />



@code {
    List<Models.Role> RoleList;

    IEnumerable<Models.Role> selectedRows;
    ITable table;

    int _pageIndex = 1;
    int _pageSize = 10;
    int _total = 0;

    protected override async Task OnInitializedAsync()
    {
        RoleList = await RoleService.ViewRoles();
        _total = RoleList.Count;
    }


    public async Task OnChange(QueryModel<Models.Role> queryModel)
    {
        Console.WriteLine(JsonSerializer.Serialize(queryModel));
    }

    // Open Update Modal and Populate with with Data
    private async Task OnUpdate(Models.Role role)
    {
        var modalConfig = new ModalOptions
            {
                Title = "Update Role Info",
                Centered = true,
                OkText = "Update",
                Width = 500
            };

        await ModalService.CreateModalAsync<AddRoleModal, Models.Role>(modalConfig, role);
    }

    // Open Add Modal (Empty)
    private async Task OnAddRole()
    {
        var modalConfig = new ModalOptions
            {
                Title = "Add Role Info",
                Centered = true,
                OkText = "Submit",
                Width = 500
            };

        await ModalService.CreateModalAsync<AddRoleModal, Models.Role>(modalConfig, new Models.Role());
       
    }
}
